route:
  receiver: 'default-receiver'
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 5m
  group_by: [id, device, host, instance, layer, alertname]
  routes:
    - receiver: 'core'
      match_re:
        layer: dist|core|firewall
    - receiver: 'access'
      match_re:
        layer: access|wifi
    - receiver: 'services'
      match_re:
        layer: services
    - receiver: 'core'
      match_re:
        team: core
    - receiver: 'access'
      match_re:
        team: access
    - receiver: 'services'
      match_re:
        team: services
    - receiver: 'powerpatrol'
      match_re:
        team: powerpatrol
    - receiver: 'heartbeat'
      match_re:
        type: heartbeat

receivers:
- name: 'default-receiver'
  webhook_configs:
  - url: 'https://ticket.tech.dreamhack.se/tech/prometheus.php'
- name: 'core'
  webhook_configs:
  - url: 'https://ticket.tech.dreamhack.se/tech/prometheus.php'
  - url: 'http://alertringer.tech.event.dreamhack.se/api/v1/alerts?team=core'
- name: 'access'
  webhook_configs:
  - url: 'https://ticket.tech.dreamhack.se/tech/prometheus.php'
  - url: 'http://alertringer.tech.event.dreamhack.se/api/v1/alerts?team=access'
- name: 'services'
  webhook_configs:
  - url: 'https://ticket.tech.dreamhack.se/tech/prometheus.php'
  - url: 'http://alertringer.tech.event.dreamhack.se/api/v1/alerts?team=services'
- name: 'powerpatrol'
  webhook_configs:
  - url: 'https://ticket.tech.dreamhack.se/tech/prometheus.php'
  - url: 'http://alertringer.tech.event.dreamhack.se/api/v1/alerts?team=powerpatrol'
- name: 'heartbeat'
  webhook_configs:
  - url: 'http://alertringer.tech.event.dreamhack.se/api/v1/heartbeat'
