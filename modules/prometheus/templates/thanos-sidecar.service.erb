[Unit]
Description=Thanos Sidecar
After=syslog.target network.target prometheus.target

[Service]
EnvironmentFile=/etc/default/thanos
User=prometheus
WorkingDirectory=/opt/thanos
ExecStart=/opt/thanos/thanos sidecar $SIDECAR_ARGS
ExecReload=kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target

