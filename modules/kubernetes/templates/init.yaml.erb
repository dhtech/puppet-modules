apiVersion: kubeadm.k8s.io/v1beta1
kind: InitConfiguration
nodeRegistration:
  name: "<%= @hostname %>"
  criSocket: "/var/run/dockershim.sock"
apiEndpoint:
  advertiseAddress: "<%= @ipaddress %>"
  bindPort: 6443
---
apiVersion: kubeadm.k8s.io/v1beta1
kind: ClusterConfiguration
etcd:
  external:
    endpoints:<% @etcd.each do |endpoint|%>
    - "https://<%= endpoint %>:2379"<% end -%>

    caFile: "/etc/ssl/dhtech-ca.crt"
    certFile: "/var/lib/puppet/ssl/certs/<%= @hostname %>.event.dreamhack.se.pem"
    keyFile: "/var/lib/puppet/ssl/private_keys/<%= @hostname %>.event.dreamhack.se.pem"
networking:
  serviceSubnet: "<%= @servicenet %>"
  podSubnet: "<%= @podnet %>"
  dnsDomain: "<%= @variant %>.k8s.event.dreamhack.se"
kubernetesVersion: "v1.14.0"
controlPlaneEndpoint: "<%= @ipaddress %>:6443"
apiServer:
  certSANs:
  - "<%= @ipaddress %>"
  - "<%= @hostname %>.event.dreamhack.se"
  - "<%= @variant %>.control.event.dreamhack.se"
  extraArgs:
    authorization-mode: "Node,RBAC"
controllerManager:
  extraArgs:
    node-cidr-mask-size: "26"
scheduler:
  extraArgs:
    address: "<%= @ipaddress %>"
certificatesDir: "/etc/kubernetes/pki"
imageRepository: "k8s.gcr.io"
clusterName: "<%= @variant %>"
